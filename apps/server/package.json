    "hono": "^4.11.4",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^22.0.0",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  }
