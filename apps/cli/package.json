{
  "name": "stargazer",
  "version": "0.1.0",
  "description": "Stargazer - Development toolkit",
  "type": "module",
  "bin": {
    "stargazer": "bin/stargazer.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm build:deps && pnpm build:web && pnpm build:bundle",
    "build:deps": "pnpm --filter @stargazer/core build && pnpm --filter @stargazer/hooks build && pnpm --filter @stargazer/server build",
    "build:web": "pnpm --filter @stargazer/web exec tsc -b && pnpm --filter @stargazer/web exec vite build --outDir ../cli/dist/web",
    "build:bundle": "tsup",
    "dev": "tsx --tsconfig tsconfig.json src/index.tsx --dev",
    "start": "node bin/stargazer.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "chalk": "^5.6.2",
    "execa": "^9.6.1",
    "figlet": "^1.10.0",
    "hono": "^4.11.7",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "open": "^11.0.0",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@stargazer/core": "workspace:*",
    "@stargazer/hooks": "workspace:*",
    "@stargazer/server": "workspace:*",
    "@stargazer/tsconfig": "workspace:*",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.13",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
