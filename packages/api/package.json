{
  "name": "@stargazer/api",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./review": {
      "types": "./dist/review.d.ts",
      "import": "./dist/review.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    },
    "./git": {
      "types": "./dist/git.d.ts",
      "import": "./dist/git.js"
    },
    "./shutdown": {
      "types": "./dist/shutdown.d.ts",
      "import": "./dist/shutdown.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@stargazer/core": "workspace:*",
    "@stargazer/schemas": "workspace:*"
  },
  "devDependencies": {
    "@stargazer/tsconfig": "workspace:*",
    "@types/node": "^25.2.0",
    "typescript": "^5.9.3"
  }
}
