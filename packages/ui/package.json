{
  "name": "@stargazer/ui",
  "version": "0.0.1",
  "description": "Terminal-inspired React UI components",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/b4r7x/stargazer",
    "directory": "packages/ui"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "terminal",
    "tui",
    "tailwind"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "./dist/styles.css",
    "./dist/theme.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./theme.css": "./dist/theme.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && cp src/styles/index.css dist/styles.css && cp src/styles/theme.css dist/theme.css",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@stargazer/tsconfig": "workspace:*",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^3.0.0"
  }
}
